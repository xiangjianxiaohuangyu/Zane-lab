{
  "compilerOptions": {
    // 编译目标：ES2020
    "target": "ES2020",

    // 模块系统：ESNext
    "module": "ESNext",

    // 启用复合项目（必须设置）
    "composite": true,

    // 跳过类型声明文件的检查
    "skipLibCheck": true,

    // 模块解析：bundler 模式
    "moduleResolution": "bundler",

    // 允许导入 .ts 扩展名
    "allowImportingTsExtensions": true,

    // 独立模块处理
    "isolatedModules": true,

    // 严格模式
    "strict": true,

    // 报告未使用的局部变量
    "noUnusedLocals": true,

    // 报告未使用的参数
    "noUnusedParameters": true,

    // 检查 switch 语句中的 fallthrough
    "noFallthroughCasesInSwitch": true
  },

  // 包含的文件：Vite 配置文件
  "include": ["vite.config.ts"]
}
